{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
      <div class="alert alert-danger alert-dismissible"><i class="fa-solid fa-circle-exclamation"></i> {{ error_warning }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    {% endif %}
    <div class="card">
      <div class="card-header"><i class="fa-solid fa-cog"></i> {{ text_edit }}</div>
      <div class="card-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module">
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="module_import_1c_status" id="input-status" class="form-select">
                <option value="1"{% if module_import_1c_status %} selected="selected"{% endif %}>{{ text_enabled }}</option>
                <option value="0"{% if not module_import_1c_status %} selected="selected"{% endif %}>{{ text_disabled }}</option>
              </select>
            </div>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-price-file">{{ entry_price_file }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_import_1c_price_file" value="{{ module_import_1c_price_file }}" placeholder="{{ entry_price_file }}" id="input-price-file" class="form-control"/>
            </div>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-quantity-file">{{ entry_quantity_file }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_import_1c_quantity_file" value="{{ module_import_1c_quantity_file }}" placeholder="{{ entry_quantity_file }}" id="input-quantity-file" class="form-control"/>
            </div>
          </div>
        </form>

        <div class="row mb-3 mt-4">
          <div class="col-sm-12">
            <div class="d-flex">
              <a href="{{ update_prices }}" class="btn btn-primary me-2">{{ button_update_prices }}</a>
              <a href="{{ update_quantities }}" class="btn btn-info me-2">{{ button_update_quantities }}</a>
              <a href="{{ update_products }}" class="btn btn-success me-2">{{ button_update_products }}</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }}